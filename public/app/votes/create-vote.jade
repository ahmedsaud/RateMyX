.container
    .well.well-lg
        form.form-horizontal(name="createVoteForm", method="POST", enctype='multipart/form-data')
            fieldset
                legend Create a new vote
                .form-group
                    label.col-md-2.control-label(for="category") Category
                    .col-md-10
                        select.form-control(ng-model="vote.category")
                            option(ng-repeat="(key, value) in categories") {{ key }}
                .form-group
                    label.col-md-2.control-label(for="picture") Picture
                    .col-md-10
                        input.form-control(type="file", placeholder="Picture", fileread="vote.picture", required)
                .form-group
                    label.col-md-2.control-label(for="question") Question
                    .col-md-10
                        input.form-control(type="text", placeholder="Enter something answered to - Yes or No?", ng-model="vote.question", required)
                .pull-right.create-vote-btn-container
                    button.btn.btn-primary(ng-click="createVote(vote)", ng-disabled="createVoteForm.$invalid") Create
                    a.btn.btn-primary(href="#/") Cancel